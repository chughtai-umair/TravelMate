<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="15dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Drag Handle -->
        <View
            android:id="@+id/dragHandle"
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:background="@drawable/handle_bg"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"/>

        <!-- Distance Text -->
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Distance: 0 km"
            android:textColor="#0290F6"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Transport Options -->
        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="100dp"
            android:layout_gravity="center|end"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnWalk"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Walk"
                android:src="@drawable/ic_walk" />

            <ImageButton
                android:id="@+id/btnBike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bike"
                android:src="@drawable/ic_bike" />

            <ImageButton
                android:id="@+id/btnCar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Car"
                android:src="@drawable/ic_car" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
